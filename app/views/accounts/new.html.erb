<div style='margin: 20px;'>
  <%= semantic_form_for @account do |form| %>
    <%= form.semantic_fields_for :users, {:display_type => "table", row_removable: true, row_addable: true, min_entry: 1, max_entry: 5} do |user_builder| %>
      <%= user_builder.inputs do %>
        <%= user_builder.input :name %>
        <%= user_builder.input :birthday %>
        <%= user_builder.input :gender, as: :select, collection: ["Male", "Female"] %>
      <% end %>
    <% end %>
    <%= form.submit %>
  <% end %>
</div>